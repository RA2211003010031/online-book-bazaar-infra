# Prometheus Configuration Template
# This file defines what Prometheus should monitor

global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  # Monitor Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Monitor all web servers using Node Exporter
  - job_name: 'node-exporter'
    static_configs:
      - targets: 
{% for host in groups['web_servers'] %}
        - '{{ hostvars[host]['ansible_host'] }}:9100'
{% endfor %}

  # Monitor web applications
  - job_name: 'web-applications'
    static_configs:
      - targets:
{% for host in groups['web_servers'] %}
        - '{{ hostvars[host]['ansible_host'] }}:3000'
{% endfor %}
    metrics_path: '/metrics'  # If your app exposes metrics
    scrape_interval: 30s

  # Monitor Jenkins (if metrics plugin is installed)
  - job_name: 'jenkins'
    static_configs:
      - targets:
{% for host in groups['jenkins_server'] %}
        - '{{ hostvars[host]['ansible_host'] }}:8080'
{% endfor %}
    metrics_path: '/prometheus'
    scrape_interval: 60s
